<h1>My cart</h1>
<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
    </tr>
  </thead>
  <tbody>
    <% cart.each do |c| %>
      <tr>
        <td><%= c[:product].name %></td>
        <td><%= c[:product].price %></td>
        <td><%= c[:quantity] %></td>
        <td><%= c[:total_price] %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td>Summary:</td>
      <td><%= cart.map{|x| x[:total_price]}.reduce(:+)%></td>
  </tfoot>
</table>
